#include "../../../config/NetAudio.tmpl"

#ifndef WIN32
#define Example(program) \
    SingleProgramTarget(program, program.o, $(AUDIOLIBS) $(XLIB), $(SYSLIBS))
#else /* WIN32 */
#define Example(program) \
    SingleProgramTarget(program, program.o, $(AUDIOLIBS), $(SYSLIBS))
#endif /* WIN32 */

SRCS = playFile.c playSimul.c playFromBckt.c loopBucket.c bundle.c \
       recordBucket.c plyBcktAsync.c playRaw.c

AllTarget(Exe(playFile) Exe(playSimul) Exe(playFromBckt) Exe(loopBucket) \
	  Exe(bundle) Exe(recordBucket) Exe(plyBcktAsync) Exe(playRaw))
DependTarget()
Example(playFile)
Example(playSimul)
Example(playFromBckt)
Example(loopBucket)
Example(bundle)
Example(recordBucket)
Example(plyBcktAsync)
Example(playRaw)
